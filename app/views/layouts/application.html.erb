<!DOCTYPE html>
<html>
  <head>
    <title>RubyOnTiss</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            var navLinks = document.querySelectorAll("nav ul li a");
            var currentPath = window.location.pathname;

            navLinks.forEach(function(link) {
                if (link.getAttribute("href") === currentPath) {
                    link.parentElement.classList.add("active");
                }
            });
        });
    </script>
  </head>

  <body>

  <nav class="topnav">
    <%=link_to root_path, id:'mobile-menu-icon' do %>
    <%= image_tag 'rubyOnTiss-logo-png.png', class:'nav-img-logo', alt: 'Ruby on Tiss Logo' %>
      <% end %>
    <div id="myLinks">
      <ul>
        <li id="logo-desktop"><%= image_tag 'rubyOnTiss-logo-png.png', class:'nav-img-logo', alt: 'Ruby on Tiss Logo' %></li>
        <li><%= link_to 'Home', root_path %></li>
        <li><%= link_to 'Person', person_path %></li>
        <li><%= link_to 'Courses', courses_path %></li>
        <li><%= link_to 'Projects', projects_path %></li>
        <li><%= link_to 'Theses', theses_path %></li>
        <li class="right-nav"><%= link_to 'Login', login_path unless logged_in? %></li>
        <li class="right-nav"><%= link_to 'Logout', logout_path if logged_in? %></li>
      </ul>
    </div>

    <a href="javascript:void(0);" class="icon" id="mobile-menu-icon" onclick="myFunction()">
      <%= image_tag 'menu.png', class:'nav-img-logo', alt: 'Ruby on Tiss Logo' %>
    </a>
  </nav>

  <section id="main">
    <%= yield %>
    <%= @data %>

  </section>


    <script>
        function myFunction() {
            var x = document.getElementById("myLinks");
            if (x.classList.contains("expanded")) {
                x.classList.remove("expanded");
            } else {
                x.classList.add("expanded");
            }
        }
    </script>


  </body>
</html>
